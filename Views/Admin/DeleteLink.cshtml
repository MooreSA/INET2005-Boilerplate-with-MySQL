@model AdminMangager

<div class="container">
    <div class="row">
        <h1>Launchpad Administration</h1>
    </div>
    <div class="row">
        <a asp-controller="admin" asp-action="logout">Logout</a>
    </div>
    <div class="row">
        <h2>Delete Link</h2>
    </div>
    <div class="row">
        <p>Delete a link</p>
    </div>
    <div class="row">
        <form asp-controller="Admin" asp-action="DeleteLink" asp-route-id="@Model.linkId" method="post">
            <div class="form-group">Are you sure you want to delete this link?</div>
            <div><img src="https://www.google.com/s2/favicons?domain_url=@Model.GetLink().url">@Model.GetLink().title | @Model.GetLink().url</div>
            <div class="form-group">
                <input type="submit" text="Edit" class="btn btn-warning">
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewData["feedback"]</span>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        </form>  
    </div>
    <div class="row">
        <a asp-controller="Admin" asp-action="Index"><button class="btn btn-warning">Cancel</button></a>
    </div>
    <div class="row">
        <span id="logout-warning" class="text-danger hidden">No Activity for 18 minutes: You will be logged out after 20 minutes of inactivity</span>
    </div>
</div>