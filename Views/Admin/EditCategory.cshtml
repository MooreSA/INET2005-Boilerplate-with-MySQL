@model AdminMangager

<div class="container">
    <div class="row">
        <h1>Launchpad Administration</h1>
    </div>
    <div class="row">
        <a asp-controller="admin" asp-action="logout">Logout</a>
    </div>
    <div class="row">
        <h2>Edit Category</h2>
    </div>
    <div class="row">
        <p>Edit the Category Info</p>
    </div>
    <div class="row">
        <form asp-controller="Admin" asp-action="EditCategory" asp-route-id="@Model.catId" method="post">
            <div class="form-group">
                <label asp-for="@Model.editCategoryForm.categoryName"></label>
                <input type="text" class="form-control" asp-for=@Model.editCategoryForm.categoryName value="@Model.GetCategoryName(@Model.catId)"/>
                <span class="text-danger" asp-validation-for="@Model.editCategoryForm.categoryName"></span>
            </div>
            <div class="form-group">
                <input type="submit" text="Edit" class="btn btn-warning">

            </div>
            <div class="form-group">
                <span class="text-danger">@ViewData["feedback"]</span>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        </form>  
    </div>
    <div class="row">
        <a asp-controller="Admin" asp-action="Index"><button class="btn btn-warning">Cancel</button></a>
    </div>
    <div class="row">
        <span id="logout-warning" class="text-danger hidden">No Activity for 18 minutes: You will be logged out after 20 minutes of inactivity</span>
    </div>
</div>